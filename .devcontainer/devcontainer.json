// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Node.js & TypeScript",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  // "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "multiUser": true
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind,consistency=cached",
  "workspaceFolder": "${localWorkspaceFolder}",
  "mounts": [
    // Uncomment the next line to mount your worktree's parent git repository
    "source=${localWorkspaceFolder}/../kjg-nikolaus,target=${localWorkspaceFolder}/../kjg-nikolaus,type=bind,consistency=cached"
    // Use the /nix mount when you have a shared Nix store on the host system.
    // "source=/nix,target=/nix,type=bind"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "yarn install",
  "postCreateCommand": "./.devcontainer/post-create.sh",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "vivaxy.vscode-conventional-commits",
        "mhutchie.git-graph",
        "sleistner.vscode-fileutils",
        "Asuka.insertnumbers",
        "heaths.vscode-guid",
        "shardulm94.trailing-spaces",
        "EditorConfig.EditorConfig",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-german",
        "AmirHA.better-comments-2",
        "chrmarti.regex",
        "bradlc.vscode-tailwindcss",
        "humao.rest-client",
        "ecmel.vscode-html-css",
        "formulahendry.auto-rename-tag",
        "esbenp.prettier-vscode"
      ]
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
