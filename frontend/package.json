{
  "name": "frontend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "pnpm run watch",
    "watch": "pnpm run clean && mix watch",
    "build": "pnpm run prod",
    "prod": "pnpm run clean && mix --production",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:fast": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "codegen:e2e": "playwright codegen ${PLAYWRIGHT_BASE_URL:-http://localhost:4173}",
    "e2e:serve": "pnpm run prod && pnpm exec serve dist -s -l tcp://127.0.0.1:${PLAYWRIGHT_PORT:-4173}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.14",
    "browser-sync": "^3.0.4",
    "browser-sync-webpack-plugin": "^2.4.0",
    "laravel-mix": "^6.0.49",
    "mix-tailwindcss": "^1.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.17",
    "vitest": "^4.0.14",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "alpinejs": "^3.15.2"
  }
}
