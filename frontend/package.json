{
  "name": "frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview --host",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit:watch": "vitest --browser.headless",
    "test:unit": "vitest --browser.headless --run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:fast": "playwright test --project=chromium",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:fast": "pnpm test:unit && pnpm test:e2e:fast",
    "ci": "pnpm format && pnpm lint && pnpm check && pnpm build && pnpm test",
    "ci:fast": "pnpm format && pnpm lint && pnpm check && pnpm build && pnpm test:fast",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^10.0.2",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-vitest": "^10.0.2",
    "@storybook/sveltekit": "^10.0.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.19.0",
    "@vitest/browser": "^4.0.7",
    "@vitest/browser-playwright": "^4.0.7",
    "@vitest/coverage-v8": "^4.0.7",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^10.0.2",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "storybook": "^10.0.2",
    "svelte": "^5.43.2",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^4.0.7",
    "vitest-browser-svelte": "^2.0.1"
  }
}
